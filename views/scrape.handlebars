<div class="main-container container">
	{{#each scrapedArticles}}
	<div class="panel article">
		<div class="panel-header">
			<a href="{{link}}">
				<h3> {{title}}</h3>
			</a>
		</div>
		<div class="article-img">
			{{img}}
		</div>

		<div class="panel-body row">
			<div class="save-btn offset-col-sm-8 col-sm-2">
				<form action="/savingArticle" method="POST">
					<input hidden name="link" value="{{link}}">
					<input hidden name="title" value="{{title}}">
					<input type="submit" class="btn btn-primary" value="Save Article">
				</form>
			</div>
		</div>
	</div>
	{{/each}}
</div>